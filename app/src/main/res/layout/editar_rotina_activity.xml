            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/spnTreinotercaER"
                android:layout_width="match_parent"
